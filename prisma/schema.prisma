// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User model (single user application)
model User {
  id                 String   @id @default(cuid())
  name              String
  email             String?  @unique
  taxFileNumber     String?
  tfnDeclared       Boolean  @default(false)
  dateOfBirth       DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Tax settings
  claimsTaxFreeThreshold Boolean @default(true)
  hasHECSDebt           Boolean @default(false)
  hasStudentFinancialSupplement Boolean @default(false)
  medicareLevyExemption Boolean @default(false)
  
  // Pay rate preferences
  lastUsedPayGuideId String?
  defaultPayGuideId  String?
  
  // Pay period preferences
  payPeriodFrequency String @default("fortnightly") // weekly, fortnightly, monthly
  payPeriodStartDay  Int    @default(1)             // 0=Sunday, 1=Monday, etc.
  
  // Relationships
  shifts            Shift[]
  payPeriods        PayPeriod[]
  payVerifications  PayVerification[]
  payGuides         PayGuide[]
  
  @@map("users")
}

// Pay guide model for award rates and penalties
model PayGuide {
  id          String   @id @default(cuid())
  name        String   // e.g., "General Retail Industry Award MA000004"
  effectiveFrom DateTime
  effectiveTo   DateTime?
  isActive    Boolean  @default(true)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Pay rates
  baseHourlyRate    Decimal // Base hourly rate (includes casual loading for retail award)
  casualLoading     Decimal @default(0.0) // Additional casual loading (0 for retail as already included)
  
  // Overtime rates (as multipliers) - Australian Retail Award defaults
  overtimeRate1_5x  Decimal @default(1.75)  // 175% for Mon-Sat first 3 hours OT
  overtimeRate2x    Decimal @default(2.25)  // 225% for Mon-Sat after 3 hours, all Sunday OT
  
  // Overtime thresholds - Australian Retail Award defaults
  dailyOvertimeHours      Decimal @default(9.0)  // Daily OT after 9 hours (retail award)
  specialDayOvertimeHours Decimal @default(11.0) // Monday can work 11 hours (one day per week)
  weeklyOvertimeHours     Decimal @default(38.0) // Weekly OT after 38 hours
  
  // Overtime trigger configuration
  overtimeOnSpanBoundary  Boolean @default(true)  // OT when outside span of ordinary hours
  overtimeOnDailyLimit    Boolean @default(true)  // OT when exceeding daily hour limits
  overtimeOnWeeklyLimit   Boolean @default(true)  // OT when exceeding weekly hour limits
  
  shifts        Shift[]
  penaltyTimeFrames PenaltyTimeFrame[]
  
  @@map("pay_guides")
}

// Custom penalty time frame model for flexible penalty rules
model PenaltyTimeFrame {
  id          String   @id @default(cuid())
  payGuideId  String
  name        String   // e.g., "Late Night Premium", "Early Morning Bonus"
  description String?  // Optional description of the penalty
  startTime   String   // Time in HH:MM format (24-hour)
  endTime     String   // Time in HH:MM format (24-hour)
  penaltyRate Decimal  // Penalty multiplier (e.g., 1.5 for 50% penalty)
  dayOfWeek   Int?     // 0=Sunday, 1=Monday, etc. null=applies to all days
  priority    Int      @default(0) // Higher numbers take precedence for overlapping periods
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  payGuide    PayGuide @relation(fields: [payGuideId], references: [id], onDelete: Cascade)
  
  @@map("penalty_time_frames")
}

// Tax bracket model for Australian tax system
model TaxBracket {
  id        String   @id @default(cuid())
  year      String   // Financial year e.g., "2024-25"
  minIncome Decimal
  maxIncome Decimal? // null for highest bracket
  taxRate   Decimal  // Tax rate as decimal (0.19 for 19%)
  baseTax   Decimal @default(0) // Base tax for this bracket
  createdAt DateTime @default(now())
  
  @@unique([year, minIncome])
  @@map("tax_brackets")
}

// HECS-HELP repayment thresholds
model HECSThreshold {
  id              String   @id @default(cuid())
  year            String   // Financial year
  minIncome       Decimal
  maxIncome       Decimal?
  repaymentRate   Decimal // Repayment rate as decimal
  createdAt       DateTime @default(now())
  
  @@unique([year, minIncome])
  @@map("hecs_thresholds")
}

// Public holidays model
model PublicHoliday {
  id          String   @id @default(cuid())
  name        String
  date        DateTime
  state       String?  // State-specific holidays (NSW, VIC, etc.), null for national
  createdAt   DateTime @default(now())
  
  @@unique([date, state])
  @@map("public_holidays")
}

// Shift model for individual work shifts
model Shift {
  id          String    @id @default(cuid())
  userId      String
  payGuideId  String
  startTime   DateTime
  endTime     DateTime?
  breakMinutes Int      @default(0)
  shiftType   ShiftType @default(REGULAR)
  status      ShiftStatus @default(SCHEDULED)
  notes       String?
  location    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  payGuide    PayGuide  @relation(fields: [payGuideId], references: [id])
  
  // Penalty override settings
  penaltyOverrides      String?  // JSON field for manual penalty overrides
  autoCalculatePenalties Boolean @default(true)
  
  // Calculated fields (updated on save)
  totalMinutes     Int?
  regularHours     Decimal?
  overtimeHours    Decimal?
  penaltyHours     Decimal?
  grossPay         Decimal?
  superannuation   Decimal?
  
  payPeriodShifts PayPeriodShift[]
  
  @@map("shifts")
}

// Pay period model
model PayPeriod {
  id              String    @id @default(cuid())
  userId          String
  startDate       DateTime
  endDate         DateTime
  payDate         DateTime?
  status          PayPeriodStatus @default(OPEN)
  weeklyHours     Decimal?
  totalGrossPay   Decimal?
  totalTax        Decimal?
  hecsRepayment   Decimal?
  medicareLevy    Decimal?
  superannuation  Decimal?
  totalNetPay     Decimal?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  shifts          PayPeriodShift[]
  payVerifications PayVerification[]
  
  @@unique([userId, startDate])
  @@map("pay_periods")
}

// Junction table for shifts in pay periods
model PayPeriodShift {
  id           String    @id @default(cuid())
  payPeriodId  String
  shiftId      String
  
  payPeriod    PayPeriod @relation(fields: [payPeriodId], references: [id], onDelete: Cascade)
  shift        Shift     @relation(fields: [shiftId], references: [id], onDelete: Cascade)
  
  @@unique([payPeriodId, shiftId])
  @@map("pay_period_shifts")
}

// Pay verification model for comparing actual vs calculated pay
model PayVerification {
  id              String    @id @default(cuid())
  userId          String
  payPeriodId     String
  actualGrossPay  Decimal
  actualTax       Decimal
  actualNetPay    Decimal
  actualSuper     Decimal?
  actualHECS      Decimal?
  paySlipReference String?  // Reference number from pay slip
  verificationDate DateTime @default(now())
  status          VerificationStatus @default(PENDING)
  notes           String?
  
  // Calculated discrepancies
  grossPayDifference Decimal?
  taxDifference      Decimal?
  netPayDifference   Decimal?
  
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  payPeriod   PayPeriod @relation(fields: [payPeriodId], references: [id], onDelete: Cascade)
  
  @@unique([userId, payPeriodId])
  @@map("pay_verifications")
}

// Enums
enum ShiftType {
  REGULAR
  OVERTIME
  DOUBLE_TIME
  PUBLIC_HOLIDAY
  WEEKEND
}

enum ShiftStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum PayPeriodStatus {
  OPEN
  CLOSED
  PAID
  VERIFIED
}

enum VerificationStatus {
  PENDING
  MATCHED
  DISCREPANCY
  RESOLVED
}
